<h1>Edit User</h1>

<%= form_for @user do |f| %>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, value: "'#{@user.username}'"%>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email, placeholder: "'#{@user.email}'" %>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
    <%= f.submit "Submit" %>
<% end %>

